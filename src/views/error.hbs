<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Sharpixi - Error</title>
    <link rel='icon' type='image/x-icon' href='favicon.ico' />
    <!-- CSS (load bootstrap from a CDN) -->
    <!-- CSS only -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT'
      crossorigin='anonymous'
    />
    <link href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@300;400;900&family=Space+Grotesk:wght@300;700&display=swap'
      rel='stylesheet'
    />
    <style>
      .font-grotesk { font-family: 'Space Grotesk', sans-serif; font-weight: 700; } .font-inter {
      font-family: 'Inter', sans; font-weight: 900;} p {font-family: 'Space Grotesk', sans;
      font-weight: 300;} li { font-family: 'Inter', sans; font-weight: 300; }
    </style>
  </head>
  <body class='bg-light'>
    <div class='d-flex flex-column min-vh-100 align-items-center justify-content-center'>
      <div class='card'>
        <div class='card-content text-center p-5'>
          <p class='fs-1 text-danger fw-bold font-inter'>{{code}}</p>
          <p class='fs-2 font-grotesk'>Oops!</p>
          <p class='fs-3 font-grotesk'>{{message}}</p>
          <div class='text-start'>
            {{#if errors}}
              {{#each errors}}
                <p class='fw-bold text-decoration-underline'>{{@key}}
                  <ul>
                    {{#each this}}
                      <li>{{this.msg}}</li>
                    {{/each}}
                  </ul>
                </p>
              {{/each}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </body>
</html>